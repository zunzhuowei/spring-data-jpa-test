                    <artifactId>tomcat7-maven-plugin</artifactId>
                    <version>2.2</version>
                    <configuration>
                        <port>8887</port>
                        <path>/tomcat</path>
                    </configuration>
                </plugin>
                <!-- For Maven Tomcat6 Plugin -->
